@model IEnumerable<Wastelander.Models.Player>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Here is your list of characters, @User.Identity.Name</h2>
<hr />

@if (Model.Any())
{
    <ul>
        <hr />
        @foreach (var player in Model)
        {
            <li>@Html.DisplayFor(model => player.Name) | @Html.ActionLink("Start Game", "Game")</li>
        }
    </ul>
}
else
{
    <p>No players have been added yet!</p>
}

@Html.ActionLink("Create new", "Create")